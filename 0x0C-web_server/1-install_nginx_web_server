#!/usr/bin/env bash
# installs nginx and configure it to listen on port 80
sudo apt-get update
sudo apt-get -y install nginx
ufw allow 'Nginx HTTP'
echo 'Hello World!' > /var/www/html/index.html
service nginx start
server {
    listen      80;
    server_name "";
    
    location / {

        return 200 'Hello World!';
    }
    return 'Hello World!';
}
service nginx restart